<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_secundary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:layout_weight="1"
        android:text=""
        android:paddingTop="30dp"
        android:textColor="#000"
        android:gravity="bottom"
        android:padding="10dp"
        android:textSize="30sp"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        >

    </TextView>

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FFFCFC"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#000"
        android:textSize="50sp">

    </TextView>

    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_2nd"
                        android:text="2nd"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_deg"
                        android:text="deg"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_sin"
                        android:text="sin"
                        android:textSize="20sp"
                        android:textColor="#ffa500"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_cos"
                        android:text="cos"
                        android:textSize="20sp"
                        android:textColor="#ffa500"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_tan"
                        android:text="tan"
                        android:textSize="20sp"
                        android:textColor="#ffa500"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_elevate"
                        android:text="x^y"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_lg"
                        android:text="lg"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_ln"
                        android:text="ln"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_Lparentheses"
                        android:text="("
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa500"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_Rparentheses"
                        android:text=")"
                        android:textSize="20sp"
                        android:textColor="#ffa500"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_square"
                        android:text="√"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                    <Button
                        android:id="@+id/btn_clear"
                        android:text="C"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_backspace"
                        android:text="bsp"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_percent"
                        android:text="%"
                        android:textSize="20sp"
                        android:textColor="#ffa500"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_division"
                        android:text="÷"
                        android:textSize="20sp"
                        android:textColor="#ffa500"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_fatorial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:text="x!"
                        android:textSize="20sp">

                    </Button>
                    <Button
                        android:id="@+id/btn_7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:text="7"
                        android:textSize="20sp">

                    </Button>

                    <Button
                        android:id="@+id/btn_8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#B51010"
                        android:backgroundTint="#CF1A1A"
                        android:text="8"
                        android:textSize="20sp"
                        app:iconTint="#AC2323">

                    </Button>
                    <Button
                        android:id="@+id/btn_9"
                        android:text="9"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_multiplicate"
                        android:text="×"
                        android:layout_weight="1"
                        android:textColor="#ffa500"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_divisionX"
                        android:text="1/x"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_4"
                        android:text="4"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                    <Button
                        android:id="@+id/btn_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#A53636"
                        android:backgroundTint="#BD3030"
                        android:text="5"
                        android:textSize="20sp"
                        app:iconTint="@color/purple_200">

                    </Button>
                    <Button
                        android:id="@+id/btn_6"
                        android:text="6"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_minus"
                        android:text="-"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="#ffa500"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_pi"
                        android:text="𝛑"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_1"
                        android:text="1"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_2"
                        android:text="2"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_3"
                        android:text="3"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_plus"
                        android:text="+"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="#ffa500"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b2p"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                    <Button
                        android:id="@+id/bp"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_0"
                        android:text="0"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_dot"
                        android:text="."
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/btn_equal"
                        android:text="="
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="#ffa500"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>